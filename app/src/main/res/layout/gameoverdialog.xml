<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp">

        <RelativeLayout

            android:layout_width="400dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/liniearlayout"
                android:layout_width="500dp"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView

                    android:layout_centerInParent="true"
                    android:layout_alignTop="@+id/gameover"
                    android:layout_alignBottom="@+id/gameover"
                    android:id="@+id/sad"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/saddlg" />
                <TextView
                   android:gravity="center"
                    android:id="@+id/gameover"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"



                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:layout_toEndOf="@+id/sad"
                    android:text="Game Over"
                    android:textSize="25sp" />

            </RelativeLayout>


            <RelativeLayout

                android:id="@+id/relative1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/liniearlayout"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="30dp">

                <ImageView
                    android:id="@+id/user_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="3dp"
                    android:src="@drawable/scoredlg" />

                <TextView
                    android:id="@+id/score"
                    android:textSize="15sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/user_icon"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/user_icon"
                    android:background="@color/editText"/>



            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativelayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relative1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp">

                <ImageView
                    android:id="@+id/password"
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:src="@drawable/coindlg"
                    android:padding="3dp"
                   />

                <TextView
                    android:id="@+id/coins"
                    android:textSize="15sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/password"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/password"
                    android:background="@color/editText"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativelayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativelayout2"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp">

                <ImageView
                    android:id="@+id/retype_pass"
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:src="@drawable/distancedlg"
                    android:padding="5dp"
                    />

                <TextView
                    android:id="@+id/distance"
                    android:textSize="15sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/retype_pass"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/retype_pass"
                    android:background="@color/editText"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativelayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/relativelayout3"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp">

                <ImageView
                    android:id="@+id/email"
                    android:layout_width="40dp"
                    android:layout_height="40dp"

                    android:padding="5dp"
                    android:src="@drawable/userdlg"
                   />

                <EditText
                    android:id="@+id/entername"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/email"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/email"
                    android:background="@color/editText"
                    android:hint="Enter Your name"
                    android:inputType="textEmailAddress"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="15sp" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="30dp"
                android:layout_below="@+id/relativelayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/save"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="70dp"
                    android:layout_marginEnd="70dp"

                    android:background="@drawable/save">

                </ImageButton>

            <ImageButton
                android:layout_toStartOf="@+id/save"
                android:scaleType="fitXY"
                android:id="@+id/backtomenu"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#00000000"
                android:layout_centerHorizontal="true"

                android:src="@drawable/menu"
                >

            </ImageButton>
                <ImageButton

                    android:scaleType="fitXY"
                    android:id="@+id/playagain"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_toEndOf="@+id/save"
                    android:background="@null"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/playagain"


                   >

                </ImageButton>
        </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>