<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rsz_space_background"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/nickname_tv"
            android:id="@+id/nickname_tv"
            android:textSize="35sp"
            android:fontFamily="@font/gendarwo"
            android:textColor="#fff"
            android:layout_margin="5dp"
            android:padding="5dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/score_tv"
            android:id="@+id/score_tv"
            android:textSize="35sp"
            android:fontFamily="@font/gendarwo"
            android:textColor="#fff"
            android:layout_margin="5dp"
            android:padding="5dp"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/distance_tv"
            android:textSize="35sp"
            android:id="@+id/distance_tv"
            android:fontFamily="@font/gendarwo"
            android:textColor="#fff"
            android:layout_margin="5dp"
            android:padding="5dp"/>

    </LinearLayout>


    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/custom_list_view"
        android:layout_margin="5dp" />

</LinearLayout>