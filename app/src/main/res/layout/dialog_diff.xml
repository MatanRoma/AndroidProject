<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/layoutDialogContainer"

    >




        <RelativeLayout
            android:layout_marginBottom="20dp"
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:orientation="vertical">

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_alignTop="@+id/gameover"
                    android:layout_alignBottom="@+id/gameover"
                    android:id="@+id/sad"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/saddlg" />
                <TextView
                    android:gravity="center"
                    android:id="@+id/gameover"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/gendarwo"
                    android:layout_toEndOf="@+id/sad"
                    android:text="@string/game_over"
                    android:textColor="#fff"
                    android:textSize="35sp" />

        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/relativelayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_title"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="15dp">
                <ImageView
                    android:id="@+id/retype_pass"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/distancedlg"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/distance"
                    android:textSize="15sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_width="150dp"
                    android:paddingTop="7dp"
                    android:fontFamily="@font/gendarwo"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/retype_pass"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/retype_pass"
                    android:background="@color/editText"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativelayout2"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativelayout1"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="30dp">


                <ImageView
                    android:id="@+id/user_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="3dp"
                    android:src="@drawable/scoredlg" />
                <TextView
                    android:id="@+id/score"
                    android:textSize="15sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/user_icon"
                    android:layout_alignParentTop="true"
                    android:paddingTop="7dp"
                    android:fontFamily="@font/gendarwo"
                    android:layout_toEndOf="@+id/user_icon"
                    android:background="@color/editText"/>
        </RelativeLayout>




        <RelativeLayout
            android:id="@+id/relativelayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativelayout2"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="15dp">
                <ImageView
                    android:id="@+id/password"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/coindlg"
                    android:padding="3dp"/>
                <TextView
                    android:id="@+id/coins"
                    android:textSize="25sp"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="sss"
                    android:paddingTop="7dp"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/password"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/password"
                    android:fontFamily="@font/gendarwo"
                    android:background="@color/editText"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:id="@+id/relativelayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relativelayout3"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp">
                <ImageView
                    android:id="@+id/email"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:src="@drawable/userdlg"/>
        <EditText
            android:imeOptions="flagNoExtractUi|flagNoFullscreen"
            android:id="@+id/entername"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/email"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/email"
            android:background="@color/editText"
            android:fontFamily="@font/gendarwo"
            android:hint="@string/enter_your_name"
            android:inputType="textEmailAddress"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textSize="25sp"/>
        </RelativeLayout>
<RelativeLayout
    android:id="@+id/relativelayout5"
    android:layout_toEndOf="@id/relativelayout3"
    android:layout_below="@+id/relativelayout3"
    android:layout_width="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_height="wrap_content">
        <CheckBox
            android:visibility="invisible"
            android:id="@+id/checkpointcb"
            android:layout_width="wrap_content"
            android:fontFamily="sans-serif"
            android:text="@string/return_to_checkpoint"
            android:layout_height="wrap_content">
        </CheckBox>
</RelativeLayout>
<RelativeLayout
    android:layout_marginBottom="20dp"
    android:layout_marginTop="20dp"
    android:layout_centerInParent="true"
    android:layout_below="@id/relativelayout5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <ImageButton
            android:layout_marginStart="70dp"
            android:layout_marginEnd="70dp"
            android:id="@+id/save"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_centerInParent="true"
            android:src="@drawable/save"
            android:text="@string/save">
        </ImageButton>

        <ImageButton
            android:src="@drawable/playagain"
            android:scaleType="fitCenter"
            android:background="@null"
            android:id="@+id/playagain"

           android:layout_width="36dp"
            android:layout_height="36dp"

            android:layout_toEndOf="@+id/save"
            android:layout_centerInParent="true"
            android:text="@string/play_again">

        </ImageButton>

        <ImageButton

            android:id="@+id/backtomenu"
            android:src="@drawable/menu"
            android:scaleType="fitCenter"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@null"
            android:layout_toStartOf="@+id/save"
            android:layout_marginStart="-72dp"
            android:layout_marginTop="0dp">

        </ImageButton>
</RelativeLayout>
    </RelativeLayout>



